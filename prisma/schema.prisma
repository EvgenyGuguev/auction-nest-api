// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String   @db.Uuid
  createdAt     DateTime @default(now())
  email         String   @unique
  passwordHash  String   @unique
  name          String?
  role          Role     @default(USER)
}

enum Role {
  USER
  ADMIN
}